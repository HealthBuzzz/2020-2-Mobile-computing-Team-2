<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory app:title="Notifications">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="notif_buzz"
            app:title="Buzz" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="notif_sound"
            app:title="Sound" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="notif_popup"
            app:title="Pop up" />

    </PreferenceCategory>


    <PreferenceCategory app:title="General">

        <SwitchPreferenceCompat
            app:key="noBother"
            android:disableDependentsState="true"
            app:title="Don't bother" />

        <ListPreference
            app:dependency="noBother"
            app:defaultValue="1"
            app:entries="@array/sound_entries"
            app:entryValues="@array/sound_values"
            app:key="sound"
            app:title="Sound setting" />

        <CheckBoxPreference
            app:key="smartwatch"
            app:title="Smartwatch"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Stretch setting">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Activate Stretch Buzz" />

        <EditTextPreference
            app:dependency="sync"
            app:key="time_interval_stretch"
            app:title="time interval"
            app:summary="(minute)" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Water drinking">

        <SwitchPreferenceCompat
            app:key="sync2"
            app:title="Activate Drinking Buzz" />

        <EditTextPreference
            app:dependency="sync2"
            app:key="time_interval_water"
            app:title="time interval"
            app:summary="(minute)" />

    </PreferenceCategory>

</PreferenceScreen>