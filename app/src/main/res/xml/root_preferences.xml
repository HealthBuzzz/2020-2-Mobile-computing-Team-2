<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="General">

        <SwitchPreferenceCompat
            app:key="n_bother"
            app:title="Don't bother" />

        <ListPreference
            app:defaultValue="Buzz"
            app:entries="@array/sound_entries"
            app:entryValues="@array/sound_values"
            app:key="sound"
            app:title="Sound setting"
            app:useSimpleSummaryProvider="true" />

        <CheckBoxPreference
            app:key="smartwatch"
            app:title="Smartwatch"
            app:useSimpleSummaryProvider="true" />
        <CheckBoxPreference
            app:key="goToBlActivity"
            app:title="go to bluetooth activity"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Stretch setting">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="activate" />

        <EditTextPreference
            app:dependency="sync"
            app:key="time_interval_stretch"
            app:title="time interval"
            app:summary="(minute)" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Water drinking">

        <SwitchPreferenceCompat
            app:key="sync2"
            app:title="activate" />

        <EditTextPreference
            app:dependency="sync2"
            app:key="time_interval_water"
            app:title="time interval"
            app:summary="(minute)" />

    </PreferenceCategory>

</PreferenceScreen>